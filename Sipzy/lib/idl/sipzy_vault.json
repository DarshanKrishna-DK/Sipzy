{
  "version": "0.1.0",
  "name": "sipzy_vault",
  "instructions": [
    {
      "name": "initializePool",
      "accounts": [
        {
          "name": "pool",
          "isMut": true,
          "isSigner": false,
          "pda": {
            "seeds": [
              { "kind": "const", "type": "string", "value": "sipzy_pool" },
              { "kind": "arg", "type": "string", "path": "youtube_id" }
            ]
          }
        },
        { "name": "authority", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "youtubeId", "type": "string" },
        { "name": "creatorWallet", "type": "publicKey" }
      ]
    },
    {
      "name": "buyTokens",
      "accounts": [
        { "name": "pool", "isMut": true, "isSigner": false },
        { "name": "buyer", "isMut": true, "isSigner": true },
        { "name": "creatorWallet", "isMut": true, "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "amount", "type": "u64" }
      ]
    },
    {
      "name": "sellTokens",
      "accounts": [
        { "name": "pool", "isMut": true, "isSigner": false },
        { "name": "seller", "isMut": true, "isSigner": true },
        { "name": "creatorWallet", "isMut": true, "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "amount", "type": "u64" }
      ]
    },
    {
      "name": "getCurrentPrice",
      "accounts": [
        { "name": "pool", "isMut": false, "isSigner": false }
      ],
      "args": []
    }
  ],
  "accounts": [
    {
      "name": "SipzyPool",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "youtubeId", "type": "string" },
          { "name": "creatorWallet", "type": "publicKey" },
          { "name": "totalReserveSol", "type": "u64" },
          { "name": "circulatingSupply", "type": "u64" },
          { "name": "isClaimed", "type": "bool" },
          { "name": "bump", "type": "u8" },
          { "name": "authority", "type": "publicKey" }
        ]
      }
    }
  ],
  "events": [
    {
      "name": "PoolInitialized",
      "fields": [
        { "name": "pool", "type": "publicKey", "index": false },
        { "name": "youtubeId", "type": "string", "index": false },
        { "name": "creatorWallet", "type": "publicKey", "index": false }
      ]
    },
    {
      "name": "TokensPurchased",
      "fields": [
        { "name": "pool", "type": "publicKey", "index": false },
        { "name": "buyer", "type": "publicKey", "index": false },
        { "name": "amount", "type": "u64", "index": false },
        { "name": "totalCost", "type": "u64", "index": false },
        { "name": "creatorFee", "type": "u64", "index": false },
        { "name": "newSupply", "type": "u64", "index": false }
      ]
    },
    {
      "name": "TokensSold",
      "fields": [
        { "name": "pool", "type": "publicKey", "index": false },
        { "name": "seller", "type": "publicKey", "index": false },
        { "name": "amount", "type": "u64", "index": false },
        { "name": "netRefund", "type": "u64", "index": false },
        { "name": "creatorFee", "type": "u64", "index": false },
        { "name": "newSupply", "type": "u64", "index": false }
      ]
    }
  ],
  "errors": [
    { "code": 6000, "name": "YouTubeIdTooLong", "msg": "YouTube ID exceeds maximum length of 32 characters" },
    { "code": 6001, "name": "InvalidAmount", "msg": "Invalid amount: must be greater than zero" },
    { "code": 6002, "name": "Overflow", "msg": "Arithmetic overflow" },
    { "code": 6003, "name": "InsufficientSupply", "msg": "Insufficient token supply for sell" },
    { "code": 6004, "name": "InsufficientReserve", "msg": "Insufficient reserve in pool" },
    { "code": 6005, "name": "InvalidCreatorWallet", "msg": "Invalid creator wallet address" }
  ],
  "metadata": {
    "address": "11111111111111111111111111111111"
  }
}

